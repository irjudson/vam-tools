# VAM Tools Docker Environment Configuration
# Copy this file to .env and adjust the paths

# Path to your photo catalog directory (on host machine)
# This will be mounted to /app/catalogs inside the container
# Default: ~/catalogs (expands to your home directory)
CATALOG_PATH=~/catalogs

# Path to your photos directory (on host machine)
# This will be mounted to /app/photos inside the container (read-only)
# Default: ~/photos (expands to your home directory)
PHOTOS_PATH=~/photos

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Redis configuration (usually don't need to change)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=2
REDIS_PASSWORD=buffalo-jump

# Celery configuration
CELERY_BROKER_URL=redis://:buffalo-jump@redis:6379/2
CELERY_RESULT_BACKEND=redis://:buffalo-jump@redis:6379/2

# Web server configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000
