[flake8]
max-line-length = 88
# Ignore:
# E203: whitespace before ':' (conflicts with black)
# E266: too many leading '#' for block comment
# E501: line too long (handled by black)
# W503: line break before binary operator (conflicts with black)
# C901: function is too complex (complexity warnings are acceptable)
# D: all docstring style warnings (enforce later)
# B007: loop variable not used (acceptable pattern)
# B008: function call in argument default (FastAPI Query pattern)
# B011: assert False (acceptable in tests)
# I: all isort checks (handled by isort tool separately with black profile)
extend-ignore = E203, E266, E501, W503, C901, D, B007, B008, B011, I
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    htmlcov
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:F841
